<?xml version="1.0" encoding="UTF-8"?>
<api context="/ce" name="CeProxyAPI" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET" uri-template="/">
        <inSequence>
            <log category="INFO" logMessageID="true" logFullPayload="false">
                <message></message>
            </log>
            <respond/>
        </inSequence>
        <faultSequence>
        </faultSequence>
